//program for selection  sort
//SELECTION SORT: selecting the minimum element in the given array and  arranging in the order
#include <stdio.h>

int main()
{

    int n,i,j,a[30],temp,min;
    printf("Enter size \n");
    scanf("%d",&n);
    printf("enter the elements");
    for(i=0;i<n;i++){
        scanf("%d",&a[i]);
    }
    
   
    for(i=0;i<n;i++){
        min=a[0];
        for(j=n;j>i;j--){
            if(min>a[j]){
                temp=a[j];
                a[j]=min;
                min=temp;
            }
        }
        a[i]=min;
    }
    
    
    
    for(i=0;i<n;i++)
    {
        printf("%d\t",a[i]);
    }

    return 0;
}
